<h1>Listing photographs</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Photo caption</th>
    <th>Comment</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photographs.each do |photograph| %>
  <tr>
    <td><%= image_tag photograph.image, width: 200 %></td>
    <td><%= photograph.photo_caption %></td>
    <td><%= photograph.comment %></td>
    <td><%= photograph.tags %></td>
    <td><%= link_to 'Show', photograph %></td>
    <td><%= link_to 'Edit', edit_photograph_path(photograph) %></td>
    <td><%= link_to 'Destroy', photograph, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

